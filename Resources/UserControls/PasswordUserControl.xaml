<UserControl x:Class="Autosalon.Resources.UserControls.PasswordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Autosalon.Resources.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <PasswordBox Style="{StaticResource MaterialDesignPasswordBox}" x:Name="PasswordBox"
                     PasswordChanged="PasswordBox_PasswordChanged" BorderThickness="0,0,0,2" 
                     FontSize="16" Foreground="White"/>
    </Grid>
</UserControl>